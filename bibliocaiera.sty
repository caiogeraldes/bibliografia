	src={acronyms},
	sort={pt-BR},
	type=acronym,
	\selection%
]
\GlsXtrLoadResources[
	src={./authors},
	sort={pt-BR},
	type=authwork,
	\selection%
]
\GlsXtrLoadResources[
	src={./abbrev},
	sort={pt-BR},
	type=abbreviation,
	\selection%
]
